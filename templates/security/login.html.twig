{% extends 'base.html.twig' %}

{% block body %}
	<h1>Connect</h1>

	<form action="{{ path('security_login') }}" method="post">
		<div class="form-group">
			<input placeholder="email" type="text" required name="_username" class="form-control">
		</div>
		<div class="form-group">
			<input placeholder="password" type="password" required name="_password" class="form-control">
		</div>
		<div>
			<button type="submit" class="btn btn-success">Connect</button>
		</div>
	</form>
{% endblock %}